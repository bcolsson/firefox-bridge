{
  "manifest_version": 3,
  "is_firefox": true,
  "name": "Firefox Launch",
  "description": "Launch websites in Firefox or Firefox Private Browsing, either automatically or when you choose. From Mozilla, the creators of the Firefox web browser.",
  "version": "0.1",
  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs",
    "storage",
    "notifications",
    "declarativeNetRequest",
    "webRequest"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "scripts": ["shared/backgroundScripts/background.js"],
    "type": "module"
  },
  "action": {
    "default_icon": {
      "32": "images/firefox-launch/32.png"
    }
  },
  "commands": {
    "launchBrowser": {
      "suggested_key": {
        "default": "Ctrl+Shift+E"
      },
      "description": "Launch External Browser"
    }
  },
  "default_locale": "en",
  "browser_specific_settings": {
    "gecko": {
      "id": "firefox-launch@mozilla.com"
    }
  },
  "experiment_apis": {
    "experiments_firefox_launch": {
      "schema": "schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "experiments",
            "firefox_launch"
          ]
        ],
        "script": "api.js"
      }
    }
  }
}
