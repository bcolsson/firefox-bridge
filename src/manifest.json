{
  "manifest_version": 3,
  "name": "Firefox Launch",
  "description": "Launch websites in Firefox or Firefox Private Browsing, either automatically or when you choose. From Mozilla, the creators of the Firefox web browser.",
  "version": "0.1",
  "icons": {
    "16": "images/firefox16.png",
    "32": "images/firefox32.png",
    "48": "images/firefox48.png",
    "96": "images/firefox96.png",
    "128": "images/firefox128.png"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs",
    "storage",
    "commands",
    "notifications",
    "declarativeNetRequest",
    "webRequest"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "backgroundScripts/background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "images/firefox16.png",
      "32": "images/firefox32.png",
      "48": "images/firefox48.png",
      "96": "images/firefox96.png",
      "128": "images/firefox128.png"
    }
  },
  "commands": {
    "launchFirefox": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Launch Firefox"
    },
    "launchFirefoxPrivate": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "Launch Firefox Private Browsing"
    }
  },
  "default_locale": "en"
}
